<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/MyCss/LayoutSampleCss.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <title>@ViewBag.Title</title>

    <style>
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            width: 100%;
            /*margin: auto;*/
        }
    </style>
</head>
<body>

    <!-- Slider -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">

                        <div class="item active">
                            <img src="~/Image/moto.jpg" />
                            <div class="carousel-caption">
                                <h3>Honda</h3>
                                <p>The King of Street.</p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="~/Image/schmer.png" />
                            <div class="carousel-caption">
                                <h3>Mam xe</h3>
                                <p>Takai desu.</p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="~/Image/lamborghini.jpg" />
                            <div class="carousel-caption">
                                <h3>Lamborghini</h3>
                                <p>The perfect car.</p>
                            </div>
                        </div>

                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Menubar -->
    <div class="container-fluid">
        <div class="menubar">
            <nav class="navbar navbar-default">
                <!-- LogoWeb -->
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">VehicleRental</a>
                </div>
                <!-- Menu -->
                <ul class="nav navbar-nav" id="navMenu">
                    <li><a href="#">Trang Chủ</a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Hãng Xe <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Audi</a></li>
                            <li><a href="#">Cadilac</a></li>
                            <li><a href="#">Wave</a></li>
                        </ul>
                    </li>
                    <li><a href="#">Điều Khoảng</a></li>
                    <li><a href="#">Đăng Ký Chủ Xe</a></li>
                </ul>
                <!-- Login -->
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" data-toggle="modal" data-target="#loginModal"><span class="glyphicon glyphicon-log-in"></span> Đăng Nhập</a></li>
                </ul>
                <!-- Search -->
                <form class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Bạn muốn tìm gì...">
                    </div>
                    <button type="submit" class="btn btn-default" id="btnSearch">Search</button>
                </form>
            </nav>
        </div>
    </div>

    <!-- Body Info -->
    <div class="container">
        <div class="row">
            <div class="col-md-12" id="bodyInfo">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- DK thue xe -->
    <div class="container" style="border-style:solid;border-width:1px;border-color:#d9d9d9">
        <div class="row">
            <!-- Div title -->
            <div class="col-md-12" style="background-color:#f2f2f2">
                <strong style="font-size:40px">Title</strong>
            </div>
            <!-- Div body -->
            <div class="col-md-10 col-md-offset-1">
                <form role="form">
                    <div class="form-group">
                        <label>Họ và Tên:</label>
                        <input type="text" class="form-control" id="txtName" placeholder="VD: Trần Nhật Khánh">
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại:</label>
                        <input type="number" class="form-control" id="txtPhone" placeholder="VD: 0924367374">
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ:</label>
                        <input type="text" class="form-control" id="txtAddress" placeholder="VD: Q1, Tp.HCM">
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ giao xe:</label>
                        <input type="text" class="form-control" id="txtAddressVehicle" placeholder="VD: Q1, Tp.HCM">
                    </div>
                    <button type="submit" class="btn btn-primary">Gửi</button>
                </form>
            </div>
        </div>
    </div>

    <br />
    <!-- Footer -->
    <div class="container-fluid" id="footer">
        <div class="container">
            <br />
            <img src="~/Image/phoneGreen.png" />
            <address>
                <br />
                <strong>Vehicle Rental</strong><br>
                Tòa nhà Innovation Công Viên phần mềm Quang Trung<br>
                <abbr title="Phone">P:</abbr> (08) 456-789
            </address>

            <address>
                <strong>Email</strong><br>
                <a href="mailto:#">khanhtn102@gmail.com</a>
            </address>
        </div>
        <div class="col-md-12" id="subFooter">

        </div>
    </div>

    <!-- Modal to show Login -->
    <div class="modal fade" id="loginModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Đăng Nhập</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="hidden" class="form-control" id="Id" />
                                <input type="text" id="Username" class="form-control" placeholder="Tài Khoản"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="password" id="Password" class="form-control" placeholder="Mật Khẩu"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnCancle" class="btn btn-default" data-dismiss="modal">Thoát</button>
                    <button type="button" id="btnLogin" class="btn btn-success">Đăng Nhập</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
